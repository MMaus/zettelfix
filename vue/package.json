{
  "name": "Zettelfix",
  "version": "0.4.0-alpha",
  "private": true,
  "type": "module",
  "scripts": {
    "serve": "vite",
    "build": "vue-tsc --noEmit && vite build",
    "test:unit": "vitest:unit",
    "lint": "vite lint",
    "postbuild": "cp -r ../api ../public"
  },
  "dependencies": {
    "@mdi/font": "^6.5.95",
    "core-js": "^3.6.1",
    "lodash": "^4.17.21",
    "mitt": "^3.0.0",
    "pinia": "^2.0.16",
    "pinia-plugin-persistedstate": "^2.4.0",
    "register-service-worker": "^1.7.2",
    "uuid": "9.0.0",
    "vue": "^3.2.37",
    "vue-router": "^4.0.3",
    "vuex": "^4.0.0",
    "vuex-persist": "^3.1.3",
    "wave-ui": "^2.26.0"
  },
  "devDependencies": {
    "@types/jest": "^27.0.2",
    "@types/lodash": "^4.14.178",
    "@types/uuid": "^8.3.4",
    "@typescript-eslint/eslint-plugin": "^4.18.0",
    "@typescript-eslint/parser": "^4.18.0",
    "@vitejs/plugin-vue": "^3.0.0",
    "@vue/compiler-sfc": "^3.2.21",
    "@vue/eslint-config-prettier": "^6.0.0",
    "@vue/eslint-config-typescript": "^7.0.0",
    "@vue/test-utils": "^2.0.0-0",
    "eslint-plugin-vue": "^7.0.0",
    "prettier": "2.7.1",
    "sass": "^1.3.0",
    "typescript": "^4.6.4",
    "vite": "^3.0.0",
    "vitest": "^0.18.0",
    "vue-tsc": "^0.38.4"
  },
  "eslintConfig": {
    "root": true,
    "env": {
      "node": true
    },
    "overrides": [
      {
        "files": [
          "*.ts",
          "*.vue",
          "*.js"
        ],
        "rules": {
          "@typescript-eslint/no-var-requires": "off",
          "@typescript-eslint/ban-ts-ignore": "off",
          "@typescript-eslint/ban-ts-comment": "off"
        }
      },
      {
        "files": [
          "**/__tests__/*.{j,t}s?(x)",
          "**/tests/unit/**/*.spec.{j,t}s?(x)"
        ],
        "env": {
          "jest": true
        }
      }
    ],
    "extends": [
      "plugin:vue/vue3-essential",
      "eslint:recommended",
      "@vue/typescript/recommended"
    ],
    "parserOptions": {
      "ecmaVersion": 2020
    },
    "rules": {}
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not dead"
  ]
}
